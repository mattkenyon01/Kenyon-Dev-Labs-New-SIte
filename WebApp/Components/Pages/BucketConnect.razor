        </p>


    }
</div>

@code {

    private bool[] isOpenCharacter = new bool[5]; // Tracks the state of each character section

    private void ToggleCharacterDetails(int index)
    {
        isOpenCharacter[index] = !isOpenCharacter[index];
    }

    private bool[] isOpen = new bool[3]; // Tracks the state of each update section

    private void ToggleDetails(int index)
    {
        isOpen[index] = !isOpen[index];
    }


}
