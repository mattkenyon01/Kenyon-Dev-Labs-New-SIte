@page "/BucketConnect"
@rendermode InteractiveServer

<div class="full-width-image-with-text-container">
    <!-- Navigation Bar -->
    <nav class="navbar">
        <!-- Image on the left -->
        <img src="../Images/BucketConnect/Bucket Connect App Icon.png" alt="Navbar Icon">

        <ul class="nav-list">
            <li><a href="/CastleClimbers">About</a></li>
            <li><a href="/About">Levels</a></li>
            <li><a href="/Features">Characters</a></li>
            <li><a href="/Contact">Achievements</a></li>
            <li><a href="/Contact">Music</a></li>
            <li><a href="/Contact">Updates</a></li>
        </ul>
    </nav>

    <img class="full-width-image-with-text" src="../Images/BucketConnect/Bucket Connect web cover.png" alt="Descriptive Alt Text">
    <div class="overlay-text"></div>
</div>

<div class="text-image-section">
    <h2>Create your Bucket List</h2>
    <div class="content-wrapper">
        <div class="text-content">
            <p>
                Bring your dreams to life with <span class="highlight">Bucket Connect</span>. Create personalised bucket lists, track your progress,
                and celebrate every goal you accomplish.
            </p>

        </div>
        <div class="image-content">
            <img src="./Images/BucketConnect/Machu Picchu.png" alt="Placeholder Image">
        </div>
    </div>
</div>

<div class="text-image-section">
    <h2>Connect with Friends</h2>
    <div class="content-wrapper">
        <div class="image-content">
            <img src="./Images/BucketConnect/Friends.png" alt="Placeholder Image">
        </div>
        <div class="text-content">
            <p>
                Connect with your <span class="highlight">friends</span> and explore their personalised bucket lists. See their progress,
                discover their goals, and cheer them on every step of the way!
            </p>
        </div>
        
    </div>
</div>

<div class="text-image-section">
    <h2>Get Inspired</h2>
    <div class="content-wrapper">
        <div class="text-content">
            <p>
                This is a sample text for the section. You can add any content here, such as a description or information
                about your section.
            </p>
        </div>
        <div class="image-content">
            <img src="./Images/BucketConnect/Inspiration.png" alt="Placeholder Image">
        </div>
    </div>
</div>

<div class="text-image-section">
    <h2>Achieve Greatness</h2>
    <div class="content-wrapper">
        <div class="image-content">
            <img src="./Images/BucketConnect/Greatness.png" alt="Placeholder Image">
        </div>
        <div class="text-content">
            <p>
                This is a sample text for the section. You can add any content here, such as a description or information
                about your section.
            </p>
        </div>
    </div>
</div>

<div class="header-text-content">
    <h2>Updates</h2>
    <p>
        Keep up with the latest updates and improvements coming to Castle Climbers.
        Stay tuned for exciting new features, characters, and levels that will take your
        climbing adventure to the next level. Don’t miss out on fresh challenges and
        enhancements designed to keep the game fun and engaging!
    </p>
</div>

<div class="update-item">
    <img src="Images/BucketConnect/1.1.png" alt="Update Image 1" class="update-image">
    <div class="update-text">
        <h2>Castle Climbers 0.3</h2>
    </div>
    <button @onclick="() => ToggleDetails(0)" class="dropdown-arrow">
        @if (isOpen[0])
        {
            @:&#9650; <!-- Up Arrow -->
        }
        else
        {
            @:&#9662; <!-- Down Arrow -->
        }
    </button>

</div>

<div class="update-details">
    @if (isOpen[0])
    {
        <h3>Version 1.1.3</h3>
        <p>
            - Search bar implemented into ideas page <br />
            - Improved loading, downloading and deleting times <br />
            - Minor Bug Fixes
        </p>

        <h3>Version 1.1.2</h3>
        <p>
            - List view and photo view features added to lists <br />
            - Download counter for ideas fixed <br />
            - Limit of lists adjusted <br />
            - Major bug fixes
        </p>

        <h3>Version 1.1.1</h3>
        <p>
            - Added functionality to report issues <br />
            - Minor bug fixes
        </p>

        <h3>Version 1.1.0</h3>
        <p>
            - Navigation bar added to allow for quicker transitions between screens <br/>
            - Added the ability to create multiple lists, each with their own covers <br />
            - Added the ability to see progress on each list <br />
            - Added ideas function, allowing users to create, share and download user submitted lists <br />
            - Total progress can be seen in the account page <br />
            - Added achievements page <br />
            - Settings page added, providing functionality to view blocked users, view the privacy policy, logout of the account or delete the current account <br />
            - Minor bug fixes
        </p>
    }
</div>

<div class="update-item">
    <img src="Images/BucketConnect/1.0.png" alt="Update Image 1" class="update-image">
    <div class="update-text">
        <h2>Bucket Connect 1.0</h2>
    </div>
    <button @onclick="() => ToggleDetails(1)" class="dropdown-arrow">
        @if (isOpen[1])
        {
            @:&#9650; <!-- Up Arrow -->
        }
        else
        {
            @:&#9662; <!-- Down Arrow -->
        }
    </button>

</div>

<div class="update-details">
    @if (isOpen[1])
    {
        <h3>Version 1.0.4</h3>
        <p>
            - Ability to block users added <br/>
            - Privacy Policy added to settings.
        </p>

        <h3>Version 1.0.3</h3>
        <p>
            - New like feature. Congratulate your friends for reaching their goals by liking their events.
        </p>

        <h3>Version 1.0.2</h3>
        <p>
            Minor bug fixes.
        </p>
        
        <h3>Version 1.0.1</h3>
        <p>
            Minor bug fixes.
        </p>
        
        <h3>Version 1.0.0</h3>
        <p>
            Initial release of app onto app store.
        </p>


    }
</div>

<footer class="footer-section">
    <div class="footer-content">
        <h2>Kenyon Dev Labs</h2>
        <div class="footer-links">
            <a href="../BucketConnect/PrivacyPolicy">Privacy Policy</a>
        </div>
        <div class="footer-links">
            <a href="mailto:info@kenyondevlabs.com">kenyondevlabs@gmail.com</a> |
            <a href="https://instagram.com/kenyondevlabs" target="_blank">Kenyon Dev Labs Instagram</a> |
            <a href="https://instagram.com/kenyondevlabs" target="_blank">Kenyon Game Labs Instagram</a>
        </div>
        <p class="copyright">&copy; 2025 Kenyon Dev Labs. All Rights Reserved.</p>
    </div>
</footer>

@code {

    private bool[] isOpenCharacter = new bool[5]; // Tracks the state of each character section

    private void ToggleCharacterDetails(int index)
    {
        isOpenCharacter[index] = !isOpenCharacter[index];
    }

    private bool[] isOpen = new bool[3]; // Tracks the state of each update section

    private void ToggleDetails(int index)
    {
        isOpen[index] = !isOpen[index];
    }


}
